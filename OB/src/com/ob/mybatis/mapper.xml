<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- mapper 태그의 namespace 속성 필수 작성 -->
<mapper namespace="Room">
<!-- 예시  -->
	<select id="list" resultType="com.ob.vo.RoomVO" >
		SELECT * FROM ARS_T ORDER BY A_IDX
	</select>
	
	
<!-- ******프리미엄 후기************************************************* -->
	<!-- 프리미엄후기 조회 -->
	<select id="selectPremium" resultType="com.ob.vo.PremiumVO">
		SELECT * FROM OBHOTEL_BOARD ORDER BY ID DESC
	</select>
	
	<!-- 프리미엄후기 총 건수 조회 -->
	<select id="totalPremiumCount" resultType="int">
		SELECT COUNT(*) FROM OBHOTEL_BOARD
	</select>
	
	<!-- 프리미엄후기 페이지별 목록조회 -->
	<select id="getPremPageList" resultType="com.ob.vo.PremiumVO"
			parameterType="Map">
		SELECT 	*
		  FROM (SELECT ROWNUM R_NUM, B.*
		  		  FROM (SELECT * FROM OBHOTEL_BOARD ORDER BY ID DESC) B)
		 WHERE R_NUM BETWEEN #{begin} AND #{end}
		   AND TYPE=#{bbs_type}
	</select>
	
<!-- ***************************************************************** -->
</mapper>  

